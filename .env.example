# StreamBoard Environment Configuration
# Copy this file to .env and fill in your actual values

# Enable/disable services
ENABLE_GOOGLE_ANALYTICS=True
ENABLE_GOOGLE_ADSENSE=True
ENABLE_AWS_METRICS=True

# Multi-account configuration for Google Analytics
# Replace with your actual GA4 property IDs and service account files
GA_ACCOUNTS='[
  {
    "name": "Main Website",
    "property_id": "YOUR_PROPERTY_ID",
    "credentials_path": "./.private/your-service-account-key.json",
    "enabled": true
  }
]'

# Multi-account configuration for Google AdSense
# Replace with your actual OAuth2 client secrets files
ADSENSE_ACCOUNTS='[
  {
    "name": "Primary Account",
    "client_secrets_path": "./.private/client_secret_YOUR_CLIENT_ID.apps.googleusercontent.com.json",
    "token_path": "token_primary.json",
    "enabled": true
  }
]'

# Multi-account configuration for AWS
# Replace with your actual AWS credentials
AWS_ACCOUNTS='[
  {
    "name": "Production",
    "access_key_id": "YOUR_AWS_ACCESS_KEY_ID",
    "secret_access_key": "YOUR_AWS_SECRET_ACCESS_KEY",
    "region": "us-east-1",
    "enabled": true
  }
]'

# Cache settings (optional)
CACHE_TTL_SECONDS=300
CACHE_TTL_SHORT=60

# Legacy single-account configuration (still supported)
# GA4_PROPERTY_ID=YOUR_PROPERTY_ID
# GA4_CREDENTIALS_PATH=./.private/your-service-account-key.json
# ADSENSE_CLIENT_SECRETS_PATH=./.private/client_secret_YOUR_CLIENT_ID.apps.googleusercontent.com.json
# AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY_ID
# AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_ACCESS_KEY
# AWS_REGION=us-east-1