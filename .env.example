# StreamBoard Environment Variables
# Copy this file to .env and fill in your actual values

# Application Settings
DEBUG=False
SERVER_HOST=0.0.0.0
SERVER_PORT=8501

# ==============================================================================
# MULTI-ACCOUNT CONFIGURATION
# ==============================================================================
# You can configure multiple accounts for each service using JSON format.
# Each account needs a unique name and the required credentials.

# ------------------------------------------------------------------------------
# Google Analytics Configuration (Multiple Properties)
# ------------------------------------------------------------------------------
# Enable/disable Google Analytics integration
ENABLE_GOOGLE_ANALYTICS=True

# Option 1: Multiple GA4 Properties (JSON format)
GA_ACCOUNTS='[{"name":"Main Website","property_id":"123456789","credentials_path":"/path/to/main-site-key.json","enabled":true},{"name":"Blog","property_id":"987654321","credentials_path":"/path/to/blog-key.json","enabled":true}]'

# Option 2: Legacy single account format (still supported)
# GA4_PROPERTY_ID=123456789
# GA4_CREDENTIALS_PATH=/path/to/service-account-key.json

# Notes for Google Analytics:
# - Each property needs its own service account credentials
# - Download service account JSON from Google Cloud Console
# - Grant each service account "Viewer" access to the GA4 property

# ------------------------------------------------------------------------------
# Google AdSense Configuration (Multiple Accounts)
# ------------------------------------------------------------------------------
# Enable/disable AdSense integration
ENABLE_GOOGLE_ADSENSE=True

# Option 1: Multiple AdSense Accounts (JSON format)
ADSENSE_ACCOUNTS='[{"name":"Primary Account","client_secrets_path":"/path/to/client_secrets_1.json","token_path":"token_primary.json","enabled":true},{"name":"Secondary Account","client_secrets_path":"/path/to/client_secrets_2.json","token_path":"token_secondary.json","enabled":true}]'

# Option 2: Legacy single account format (still supported)
# ADSENSE_CLIENT_SECRETS_PATH=/path/to/client_secrets.json
# ADSENSE_ACCOUNT_ID=pub-1234567890123456
# ADSENSE_TOKEN_PATH=token.json

# Notes for AdSense:
# - Each account needs separate OAuth2 credentials
# - First run will require browser authentication for each account
# - Tokens are saved automatically after first authentication

# ------------------------------------------------------------------------------
# AWS Configuration (Multiple Accounts)
# ------------------------------------------------------------------------------
# Enable/disable AWS metrics
ENABLE_AWS_METRICS=True

# Option 1: Multiple AWS Accounts (JSON format)
AWS_ACCOUNTS='[{"name":"Production","access_key_id":"AKIAIOSFODNN7EXAMPLE","secret_access_key":"wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY","region":"us-east-1","enabled":true},{"name":"Development","access_key_id":"AKIAIOSFODNN7EXAMPLE2","secret_access_key":"wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY2","region":"us-west-2","enabled":true}]'

# Option 2: Legacy single account format (still supported)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=AKIAIOSFODNN7EXAMPLE
# AWS_SECRET_ACCESS_KEY=wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY

# Notes for AWS:
# - Each account needs IAM user with appropriate read permissions
# - Required permissions: Cost Explorer, CloudWatch, EC2, S3, RDS read access
# - Be careful with regions - some resources may be region-specific

# ==============================================================================
# FORMATTING TIPS FOR JSON CONFIGURATION
# ==============================================================================
# 1. Use single quotes around the entire JSON string
# 2. Use double quotes inside the JSON for keys and string values
# 3. Escape any special characters in paths
# 4. Each account must have a unique "name" field
# 5. Set "enabled":false to temporarily disable an account

# Example with escaped paths:
# GA_ACCOUNTS='[{"name":"Site 1","property_id":"123","credentials_path":"C:\\Users\\Me\\keys\\ga.json","enabled":true}]'

# ==============================================================================
# CACHE AND SECURITY SETTINGS
# ==============================================================================

# Cache Settings
# Default cache TTL in seconds (3600 = 1 hour)
CACHE_TTL_SECONDS=3600

# Short cache TTL for frequently changing data (300 = 5 minutes)
CACHE_TTL_SHORT=300

# Security Settings
# Generate a secure random key for production
SECRET_KEY=change-me-in-production

# Session timeout in minutes
SESSION_TIMEOUT_MINUTES=60

# ==============================================================================
# DISABLING SERVICES
# ==============================================================================
# You can disable entire services if not needed:
# ENABLE_GOOGLE_ANALYTICS=False
# ENABLE_GOOGLE_ADSENSE=False
# ENABLE_AWS_METRICS=False