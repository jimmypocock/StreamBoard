#!/bin/bash
source streamboard_env/bin/activate
if [ "$1" == "start" ]; then
    echo "ğŸš€ Starting StreamBoard on http://localhost:8501"
    streamlit run app.py
elif [ "$1" == "stop" ]; then
    echo "â¹ï¸  Stopping StreamBoard..."
    pkill -f "streamlit run"
elif [ "$1" == "status" ]; then
    if pgrep -f "streamlit run" > /dev/null; then
        echo "âœ… StreamBoard is running"
    else
        echo "âŒ StreamBoard is not running"
    fi
else
    echo "Usage: streamboard [start|stop|status]"
fi
